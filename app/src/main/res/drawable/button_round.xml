<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="5dip" android:color="#008477" />
            <gradient android:angle="0" android:startColor="#BF008477" android:endColor="#BF008477"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="5dip" android:color="#008477" />
            <solid android:color="#008477"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dip" />
            <stroke android:width="5dip" android:color="#008477" />
            <gradient android:angle="0" android:startColor="#008477" android:endColor="#008477" />
        </shape>
    </item>
</selector>